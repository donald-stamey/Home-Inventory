<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.SearchFragment">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="32sp"
        android:padding="16dp"
        android:hint="Search..."/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/floor"
        app:layout_constraintTop_toBottomOf="@+id/search"
        app:layout_constraintBottom_toTopOf="@id/room"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/floorSpin"
        android:textSize="20sp"
        android:padding="8dp"
        android:text="On"/>
    <Spinner
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/floorSpin"
        app:layout_constraintTop_toTopOf="@+id/floor"
        app:layout_constraintBottom_toBottomOf="@id/floor"
        app:layout_constraintStart_toEndOf="@+id/floor"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/room"
        app:layout_constraintTop_toBottomOf="@+id/floor"
        app:layout_constraintBottom_toTopOf="@id/surface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/roomSpin"
        android:textSize="20sp"
        android:padding="8dp"
        android:text="In"/>
    <Spinner
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/roomSpin"
        app:layout_constraintTop_toTopOf="@+id/room"
        app:layout_constraintBottom_toBottomOf="@id/room"
        app:layout_constraintStart_toEndOf="@+id/room"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/surface"
        app:layout_constraintTop_toBottomOf="@+id/room"
        app:layout_constraintBottom_toTopOf="@id/container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/surfaceSpin"
        android:textSize="20sp"
        android:padding="8dp"
        android:text="On"/>
    <Spinner
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/surfaceSpin"
        app:layout_constraintTop_toTopOf="@+id/surface"
        app:layout_constraintBottom_toBottomOf="@id/surface"
        app:layout_constraintStart_toEndOf="@+id/surface"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/container"
        app:layout_constraintTop_toBottomOf="@id/surface"
        app:layout_constraintBottom_toTopOf="@id/results"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/containerSpin"
        android:textSize="20sp"
        android:padding="8dp"
        android:text="In"/>
    <Spinner
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/containerSpin"
        app:layout_constraintTop_toTopOf="@+id/container"
        app:layout_constraintBottom_toBottomOf="@id/container"
        app:layout_constraintStart_toEndOf="@+id/container"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/results"
        app:layout_constraintTop_toBottomOf="@id/container"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_search_black_24dp"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>