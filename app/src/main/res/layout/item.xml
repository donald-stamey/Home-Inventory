<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="#8000">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/popupBackgroud"
        app:layout_constraintTop_toTopOf="@id/back"
        app:layout_constraintBottom_toBottomOf="@id/quantity"
        android:background="#FFF"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/back"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/image"
        android:background="@drawable/ic_back_black_24dp"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/delete"
        app:layout_constraintStart_toEndOf="@id/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/back"
        app:layout_constraintBottom_toTopOf="@id/image"
        android:background="@drawable/ic_trash_black_24dp"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintBottom_toTopOf="@id/label"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/label"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintBottom_toTopOf="@id/floor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/edit"
        android:maxLines="1"
        android:inputType="text"
        android:textSize="32sp"
        android:padding="16dp"
        android:text="Name of Item"
        android:gravity="center"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit"
        app:layout_constraintStart_toEndOf="@id/label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintBottom_toTopOf="@id/floor"
        android:background="@drawable/ic_edit_black_24dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/floor"
        app:layout_constraintTop_toBottomOf="@id/label"
        app:layout_constraintBottom_toTopOf="@id/room"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/floorSpin"
        android:textSize="20sp"
        android:padding="8dp"
        android:text="On"/>
    <Spinner
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/floorSpin"
        app:layout_constraintTop_toTopOf="@id/floor"
        app:layout_constraintBottom_toBottomOf="@id/floor"
        app:layout_constraintStart_toEndOf="@id/floor"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/room"
        app:layout_constraintTop_toBottomOf="@id/floor"
        app:layout_constraintBottom_toTopOf="@id/surface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/roomSpin"
        android:textSize="20sp"
        android:padding="8dp"
        android:text="In"/>
    <Spinner
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/roomSpin"
        app:layout_constraintTop_toTopOf="@id/room"
        app:layout_constraintBottom_toBottomOf="@id/room"
        app:layout_constraintStart_toEndOf="@id/room"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/surface"
        app:layout_constraintTop_toBottomOf="@id/room"
        app:layout_constraintBottom_toTopOf="@id/container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/surfaceSpin"
        android:textSize="20sp"
        android:padding="8dp"
        android:text="On"/>
    <Spinner
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/surfaceSpin"
        app:layout_constraintTop_toTopOf="@id/surface"
        app:layout_constraintBottom_toBottomOf="@id/surface"
        app:layout_constraintStart_toEndOf="@id/surface"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/container"
        app:layout_constraintTop_toBottomOf="@id/surface"
        app:layout_constraintBottom_toTopOf="@id/quantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/containerSpin"
        android:textSize="20sp"
        android:padding="8dp"
        android:text="In"/>
    <Spinner
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/containerSpin"
        app:layout_constraintTop_toTopOf="@id/container"
        app:layout_constraintBottom_toBottomOf="@id/container"
        app:layout_constraintStart_toEndOf="@id/container"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/quantity"
        app:layout_constraintTop_toBottomOf="@id/container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/quantityNum"
        android:textSize="20sp"
        android:padding="8dp"
        android:text="Quantity"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/quantityNum"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="@id/quantity"
        app:layout_constraintBottom_toBottomOf="@id/quantity"
        app:layout_constraintStart_toEndOf="@id/quantity"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>